<mujoco model="xarm7_tabletop">
    <compiler angle="radian" autolimits="true" coordinate="local" meshdir="meshes"/>
    <option integrator="implicitfast" impratio="20" density="1.2" viscosity="0.00002" gravity = "0 0 -9.81" />

    <asset>
        <material name="white" rgba="1 1 1 1"/>
        <material name="gray" rgba="0.753 0.753 0.753 1"/>
        <material name="black" rgba="0.149 0.149 0.149 1"/>

        <material name="red_mat" rgba="1 0 0 1" specular="0.3" shininess="0.1" />

        <mesh file="xarm/link_base.stl"/>
        <mesh file="xarm/link1.stl"/>
        <mesh file="xarm/link2.stl"/>
        <mesh file="xarm/link3.stl"/>
        <mesh file="xarm/link4.stl"/>
        <mesh file="xarm/link5.stl"/>
        <mesh file="xarm/link6.stl"/>
        <mesh file="xarm/link7.stl"/>
        <mesh file="xarm/end_tool.stl"/>
        <mesh file="xarm/base_link.stl"/>
        <mesh file="xarm/left_outer_knuckle.stl"/>
        <mesh file="xarm/left_finger.stl"/>
        <mesh file="xarm/left_inner_knuckle.stl"/>
        <mesh file="xarm/right_outer_knuckle.stl"/>
        <mesh file="xarm/right_finger.stl"/>
        <mesh file="xarm/right_inner_knuckle.stl"/>
        <mesh name="hex_box" file="block_inner3.stl" scale="0.005 0.005 0.005"/>
    </asset>

      <default>
    <default class="xarm7">
      <geom type="mesh" material="white"/>
      <joint axis="0 0 1" range="-6.28319 6.28319" frictionloss="1"/>
      <general biastype="affine" ctrlrange="-6.28319 6.28319"/>
      <default class="size1">
        <joint damping="20"/>
        <general gainprm="1500" biasprm="0 -1500 -150" forcerange="-50 50"/>
      </default>
      <default class="size2">
        <joint damping="10"/>
        <general gainprm="1000" biasprm="0 -1000 -100" forcerange="-30 30"/>
      </default>
      <default class="size3">
        <joint damping="10"/>
        <general gainprm="800" biasprm="0 -800 -80" forcerange="-20 20"/>
      </default>
      <default class="spring_link">
        <joint range="0 0.85" stiffness="0.05" springref="2.62" damping="0.00125"/>
      </default>
      <default class="driver">
        <joint range="0 0.85" armature="0.005" damping="0.1" solreflimit="0.005 1"/>
      </default>
      <default class="follower">
        <joint range="0 0.85" solreflimit="0.005 1"/>
      </default>
      <site size="0.001" rgba="1 0 0 1" group="4"/>
    </default>
  </default>

    <worldbody>
        <!-- Table -->
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>

        <body name="table" pos="0 0 -0.04">
            <geom name="table_geom" type="box" size="1 1 0.01" rgba="0.8 0.8 0.8 1"/>
        </body>

        <!-- Cube -->
        <body name="object" pos="0.25 -0.5 -0.0185">
            <geom name="cube_geom" type="box" size="0.025 0.025 0.025" density="500" rgba="0 1 0 1" friction="0.5 0.5 0.5" solimp="0.998 0.998 0.001" solref="0.001 1"/>
            <joint name="cube_free" type="free" damping="0.0005" />
        </body>

        <body name="hex_container" pos="-0.3 -0.5 0.01">
          <!-- 6 Walls using rotated boxes (2x scaled) -->
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="0.08 0 0.01" euler="0 0 1.5708" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="0.04 0.06928 0.01" euler="0 0 2.6180" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="-0.04 0.06928 0.01" euler="0 0 3.6652" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="-0.08 0 0.01" euler="0 0 4.7124" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="-0.04 -0.06928 0.01" euler="0 0 5.7596" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>
          <geom type="box" mass="0.01" size="0.06 0.01 0.1" pos="0.04 -0.06928 0.01" euler="0 0 0.5236" friction="1 1 1" solimp="0.99 0.99 0.01" solref="0.0001 1"/>

          <!-- Hexagonal Base (2x scaled) -->
          <geom type="cylinder" mass="0.01" size="0.1 0.01" pos="0 0 -0.04" quat="0.7071 0 0 0.7071"/>
          
          <joint type="free" damping="1"/>
        </body>

        <body name="robot" pos="0 0 -0.03" childclass="xarm7">
          <include file="xarm7_model.xml"/>
        </body>

        <body mocap="true" name="mocap" pos="0.206 0 -0.0815" quat="0 0 -1 0"> </body>
    </worldbody>

    <contact>
        <exclude body1="right_inner_knuckle" body2="right_outer_knuckle"/>
        <exclude body1="right_inner_knuckle" body2="right_finger"/>
        <exclude body1="left_inner_knuckle" body2="left_outer_knuckle"/>
        <exclude body1="left_inner_knuckle" body2="left_finger"/>
    </contact>

    <tendon>
        <fixed name="split">
            <joint joint="right_driver_joint" coef="0.5"/>
            <joint joint="left_driver_joint" coef="0.5"/>
        </fixed>
    </tendon>

    <equality>
        <connect anchor="0 0.015 0.015" body1="right_finger" body2="right_inner_knuckle" solref="0.0001 1"/>
        <connect anchor="0 -0.015 0.015" body1="left_finger" body2="left_inner_knuckle" solref="0.0001 1"/>
        <joint joint1="left_driver_joint" joint2="right_driver_joint" polycoef="0 1 0 0 0" solref="0.0001 1"/>
        <weld body1="mocap" body2="end_effector" relpose="0 0 0 1 0 0 0" torquescale="25" />
    </equality>

    <actuator>
        <general name="act1" joint="joint1" class="size1"/>
        <general name="act2" joint="joint2" class="size1" ctrlrange="-2.059 2.0944"/>
        <general name="act3" joint="joint3" class="size2"/>
        <general name="act4" joint="joint4" class="size2" ctrlrange="-0.19198 3.927"/>
        <general name="act5" joint="joint5" class="size2"/>
        <general name="act6" joint="joint6" class="size3" ctrlrange="-1.69297 3.14159"/>
        <general name="act7" joint="joint7" class="size3"/>
        <general name="gripper" tendon="split"  forcerange="-50 50" ctrlrange="0 255" biastype="affine" gainprm="0.333"
            biasprm="0 -100 -10"/>
    </actuator>

</mujoco>